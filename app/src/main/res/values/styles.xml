<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="alertTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="buttonStyle">@style/alertButtonStyle</item>
    </style>
    <style name="alertButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
    </style>
</resources>
